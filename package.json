{
  "name": "synapses",
  "version": "0.1.0",
  "description": "Light library for data propagation",
  "author": "Sandro Lain",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/umd/index.d.ts",
  "files": [
    "dist/cjs/*",
    "dist/esm/*",
    "dist/umd/*"
  ],
  "scripts": {
    "build": "npx rollup -c",
    "watch": "npx rollup -cw",
    "prepare": "npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && open ./coverage/lcov-report/index.html",
    "docs:build": "npx typedoc ./src",
    "docs:serve": "npm run docs:build && npx open-cli ./docs/typedocs/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandrolain/synapses.git"
  },
  "keywords": [
    "reactive",
    "emitter",
    "observable",
    "callback",
    "javascript",
    "typescript",
    "library"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "happy-dom": "^0.12.1",
    "jest": "^25.3.0",
    "live-server": "^1.2.1",
    "open-cli": "^6.0.1",
    "rollup": "^2.6.1",
    "rollup-plugin-delete": "^1.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^25.3.1",
    "typedoc": "^0.17.4",
    "typescript": "^3.8.3"
  }
}
