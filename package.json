{
  "name": "synapses",
  "version": "0.1.0",
  "description": "Light library for reactive data propagation",
  "author": "Sandro Lain",
  "main": "dist/umd/index.js",
  "browser": "dist/umd/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/esm/*",
    "dist/umd/*"
  ],
  "scripts": {
    "build": "npx rollup -c",
    "watch": "npx rollup -cw",
    "prepare": "npm run build",
    "test": "jest --verbose",
    "test:coverage": "jest --verbose --coverage",
    "test:coverage:open": "jest --coverage && open ./coverage/lcov-report/index.html",
    "docs:build": "npx typedoc ./src",
    "docs:serve": "npm run docs:build && npx open-cli ./docs/typedocs/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandrolain/synapses.git"
  },
  "keywords": [
    "reactive",
    "emitter",
    "observable",
    "callback",
    "javascript",
    "typescript",
    "library"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "happy-dom": "^2.25.1",
    "jest": "^27.4.5",
    "jest-websocket-mock": "^2.2.1",
    "live-server": "^1.2.1",
    "mock-socket": "^9.0.8",
    "open-cli": "^7.0.1",
    "rollup": "^2.62.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-jest": "^27.1.2",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4"
  }
}
